<% @log_dirs.each do |dir| %><%= dir %>/*.log <% end %> {
        daily
        missingok
        rotate <%= node[:logrotate][:rotate] %>
        compress
        delaycompress
        <% if node[:logrotate][:dateformat] -%>
        dateext
        dateformat <%= node[:logrotate][:dateformat] %>
        <% end -%>
        create 640 syslog adm
        notifempty
        copytruncate
        sharedscripts
        post-rotate
        (stop rsyslog && rm /var/spool/rsyslog/stat* && start rsyslog 2>&1) || true
        endscript
}
