<% node[:elasticsearch][:setting].each_pair do |key,val| %>
  <% if val.is_a?(Hash) %>
<%= key %> :
    <% val.each_pair do |k,v| %>
      <% if v.is_a?(Hash) %>
  <%= k %> :
        <% v.each_pair do |vk,vv| %>
    <%= vk %> : <%= vv %>
        <% end %>
      <% else %>
  <%= k %> : <%= v %>
      <% end %>
    <% end %>
  <% else %>
<%= key %> : <%= val %>
  <% end %>
<% end %>
